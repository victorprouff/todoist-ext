{
  "manifest_version": 2,
  "name": "Récupérateur d'URL et H1",
  "version": "1.0",
  "description": "Récupère l'URL de l'onglet courant et le premier H1 de la page.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
    "https://api.todoist.com/",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}